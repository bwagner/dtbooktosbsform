    <utfx:assert-equal>
      <utfx:source>
        <stub xml:lang="de"><dtb:byline><dtb:em>Tages-Anzeiger</dtb:em></dtb:byline>
          <dtb:p><dtb:em>Zum Autor</dtb:em></dtb:p></stub>
      </utfx:source>
